{
	"name": "testing-react-vs-enzyme",
	"version": "1.0.0",
	"description": "A repository to compare react-testing-library vs. enzyme",
	"author": "Vinh Le <lethanhvinh95@gmail.com>",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --colors",
		"format": "prettier \"**/*.(js|json|less|css|html|ts|tsx|md)\" --write"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test"
		}
	},
	"lint-staged": {
		"src/**/*.+(js|json|ts|md|mdx|graphql)": [
			"npm run format",
			"git add"
		]
	},
	"dependencies": {
		"@testing-library/react": "^11.2.5",
		"@testing-library/user-event": "^13.0.15",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-test-renderer": "^17.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.13.10",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/polyfill": "^7.12.1",
		"@babel/preset-env": "^7.13.12",
		"@babel/preset-react": "^7.12.13",
		"@jackfranklin/test-data-bot": "^1.3.0",
		"@testing-library/jest-dom": "^5.11.10",
		"@types/faker": "^5.1.7",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"babel-core": "^6.26.3",
		"babel-jest": "^26.6.3",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.6",
		"enzyme-to-json": "^3.6.1",
		"faker": "^5.5.0",
		"husky": "^5.2.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"msw": "^0.28.0",
		"prettier": "^2.2.1",
		"whatwg-fetch": "^3.6.2"
	},
	"msw": {
		"workerDirectory": "public"
	}
}
